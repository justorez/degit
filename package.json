  "version": "1.0.2",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "degitc": "src/bin.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "npm run build -- --watch",
