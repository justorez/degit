  "repository": {
    "type": "git",
    "url": "git+https://github.com/justorez/degitc.git"
  },
  "keywords": [
    "scaffolding",
    "template",
    "git"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justorez/degitc/issues"
  },
  "homepage": "https://github.com/justorez/degitc#readme",
  "dependencies": {
    "chalk": "4.1.0",
    "enquirer": "2.3.6",
    "fuzzysearch": "1.0.3",
    "https-proxy-agent": "7.0.2",
    "mri": "1.1.6",
    "rimraf": "3.0.2",
    "sander": "0.6.0",
    "tar": "6.1.0",
    "tiny-glob": "0.2.8"
  },
  "devDependencies": {
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "prettier": "2.2.1",
    "source-map-support": "0.5.21"
  },
  "files": [
    "help.md",
    "src"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js, json, yml, md}": [
      "prettier --write",
      "git add"
    ]
  }
}
